<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#c6d1ff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Añadir nuevo vehículo"
            android:id="@+id/tvAnyadir"
            android:clickable="false"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_below="@+id/imageView5"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:text="Atras"
            android:id="@+id/btAtrasMisVeh"
            android:background="@drawable/presion_boton"
            android:layout_below="@+id/tvAnyadir"
            android:layout_centerHorizontal="true"
            android:textSize="12dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewVehiculos"
            android:layout_below="@+id/btAtrasMisVeh"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/imageView5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/texto_mis_vehiculos"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>

</ScrollView>