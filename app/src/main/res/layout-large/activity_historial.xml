<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#c6d1ff">

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Atras"
        android:id="@+id/btAtrasHistAcc"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/presion_boton"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/texto_historial_accidentes"
        android:layout_marginTop="15dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewAccidentes"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btAtrasHistAcc"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp" />
</RelativeLayout>