<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act_Login"
    android:background="#c6d1ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Usuario"
        android:id="@+id/tvUsuario"
        android:layout_below="@+id/imageView6"
        android:layout_alignLeft="@+id/tvAunNo"
        android:layout_alignStart="@+id/tvAunNo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etUsuario"
        android:layout_above="@+id/etContraseña"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contraseña"
        android:id="@+id/tvContraseña"
        android:layout_alignBottom="@+id/tvAunNo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp" />

    <EditText
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etContraseña"
        android:layout_below="@+id/tvUsuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="¿Aún no estas registrado? Registrarte"
        android:id="@+id/tvAunNo"
        android:textColor="#ff2d48ff"
        android:clickable="false"
        android:gravity="center_horizontal"
        android:layout_below="@+id/scrollView"
        android:layout_alignLeft="@+id/tvContraseña"
        android:layout_alignStart="@+id/tvContraseña" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Entrar"
        android:id="@+id/btLogEntrar"
        android:background="@drawable/presion_boton"
        android:layout_alignBottom="@+id/etContraseña"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/etUsuario"
        android:layout_alignTop="@+id/etContraseña"
        android:layout_toRightOf="@+id/etUsuario" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:background="@drawable/texto_login"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:fillViewport="false"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tvUsuario"
        android:layout_alignStart="@+id/tvUsuario" />
</RelativeLayout>
