<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MIS VEHÍCULOS"
        android:id="@+id/tvTitMisVeh"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Añadir nuevo vehículo"
        android:id="@+id/tvAnyadir"
        android:clickable="false"
        android:textStyle="bold"
        android:layout_above="@+id/btAtrasMisVeh"
        android:layout_alignRight="@+id/tvTitMisVeh"
        android:layout_alignEnd="@+id/tvTitMisVeh"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Atras"
        android:id="@+id/btAtrasMisVeh"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewVehiculos"
        android:layout_below="@+id/tvTitMisVeh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tvAnyadir"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp" />

</RelativeLayout>