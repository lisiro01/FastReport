<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fecha"
        android:id="@+id/tvFecha"
        android:layout_below="@+id/tvTitNuevoAcc"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCIDENTE"
        android:id="@+id/tvTitNuevoAcc"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hora"
        android:id="@+id/tvHora"
        android:layout_below="@+id/tvFecha"
        android:layout_alignLeft="@+id/tvFecha"
        android:layout_alignStart="@+id/tvFecha"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LocalizaciÃ³n"
        android:id="@+id/tvLocal"
        android:layout_below="@+id/tvHora"
        android:layout_alignLeft="@+id/tvHora"
        android:layout_alignStart="@+id/tvHora"
        android:layout_marginBottom="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_above="@+id/editText2"
        android:layout_alignLeft="@+id/tvTitNuevoAcc"
        android:layout_alignStart="@+id/tvTitNuevoAcc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignBottom="@+id/tvHora"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btEnviar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/btGuardFE"
        android:layout_alignTop="@+id/btEnviar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fotos"
        android:id="@+id/tvFotos"
        android:layout_below="@+id/tvLocal"
        android:layout_alignLeft="@+id/tvHora"
        android:layout_alignStart="@+id/tvHora"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_toStartOf="@+id/tvTitNuevoAcc"
        android:layout_toLeftOf="@+id/tvTitNuevoAcc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vehiculo"
        android:id="@+id/tvVeh"
        android:layout_below="@+id/tvFotos"
        android:layout_alignLeft="@+id/tvLocal"
        android:layout_alignStart="@+id/tvLocal"
        android:layout_marginBottom="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/etSelVeh"
        android:text="Selecciona Vehiculo"
        android:layout_alignBottom="@+id/tvVeh"
        android:layout_toRightOf="@+id/tvFotos"
        android:layout_toEndOf="@+id/tvFotos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enviar Datos a:"
        android:id="@+id/tvEnvDat"
        android:layout_below="@+id/tvVeh"
        android:layout_alignLeft="@+id/tvVeh"
        android:layout_alignStart="@+id/tvVeh"
        android:layout_marginBottom="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/etEmail"
        android:text="Introduzca email"
        android:layout_below="@+id/tvEnvDat"
        android:layout_alignLeft="@+id/tvEnvDat"
        android:layout_alignStart="@+id/tvEnvDat"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atras"
        android:id="@+id/btAtrasFE"
        android:layout_alignTop="@+id/btGuardFE"
        android:layout_toLeftOf="@+id/etSelVeh"
        android:layout_toStartOf="@+id/etSelVeh" />

</RelativeLayout>