<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lisis.charles.fastreport.Datos_Aseguradora">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aseguradora"
        android:id="@+id/tvNombreAseg"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATOS ASEGURADORA"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvTituloDatosAseg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNombreAseg"
        android:layout_below="@+id/tvNombreAseg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tvTituloDatosAseg"
        android:layout_alignEnd="@+id/tvTituloDatosAseg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etNumPol"
        android:layout_below="@+id/tvNumPol"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etNombreAseg"
        android:layout_alignEnd="@+id/etNombreAseg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NÂº Poliza"
        android:id="@+id/tvNumPol"
        android:layout_below="@+id/etNombreAseg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Atras"
        android:id="@+id/btAtDA"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvNumPol"
        android:layout_toEndOf="@+id/tvNumPol" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/btGuardDA"
        android:layout_alignBottom="@+id/btAtDA"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
