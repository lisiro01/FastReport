<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act_Registro"
    android:background="#c6d1ff">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Email"
            android:id="@+id/tvNombreUsuario"
            android:layout_below="@+id/imageView7"
            android:layout_alignLeft="@+id/tvContraseñaR"
            android:layout_alignStart="@+id/tvContraseñaR" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edNombreUsuario"
            android:layout_alignBottom="@+id/tvNombreUsuario"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tvContraseñaR"
            android:layout_alignRight="@+id/btRegistrarseR"
            android:layout_alignEnd="@+id/btRegistrarseR"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="-10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Contraseña"
            android:id="@+id/tvContraseñaR"
            android:layout_below="@+id/tvNombreUsuario"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp" />

        <EditText
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edContraseñaR"
            android:layout_alignBottom="@+id/tvContraseñaR"
            android:layout_alignLeft="@+id/edNombreUsuario"
            android:layout_alignStart="@+id/edNombreUsuario"
            android:layout_alignRight="@+id/edNombreUsuario"
            android:layout_alignEnd="@+id/edNombreUsuario"
            android:layout_marginBottom="-10dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Atras"
            android:id="@+id/btAtrasR"
            android:background="@drawable/presion_boton"
            android:layout_below="@+id/edRepite"
            android:layout_toRightOf="@+id/tvNombreUsuario"
            android:layout_toEndOf="@+id/tvNombreUsuario"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Registrarse"
            android:id="@+id/btRegistrarseR"
            android:layout_alignTop="@+id/btAtrasR"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/presion_boton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Repite la"
            android:id="@+id/tvRepite1"
            android:layout_below="@+id/tvContraseñaR"
            android:layout_alignLeft="@+id/tvContraseñaR"
            android:layout_alignStart="@+id/tvContraseñaR"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="contraseña"
            android:id="@+id/tvRepite2"
            android:layout_below="@+id/tvRepite1"
            android:layout_alignLeft="@+id/tvRepite1"
            android:layout_alignStart="@+id/tvRepite1" />

        <EditText
            android:inputType="textPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edRepite"
            android:layout_alignBottom="@+id/tvRepite2"
            android:layout_toRightOf="@+id/tvContraseñaR"
            android:layout_alignRight="@+id/edContraseñaR"
            android:layout_alignEnd="@+id/edContraseñaR"
            android:layout_marginBottom="-10dp" />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="65dp"
            android:id="@+id/imageView7"
            android:background="@drawable/texto_registro"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</ScrollView>
